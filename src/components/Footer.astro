---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";
---

<section id="footer">
  <div class="container">
    <div class="column">
      <h3>Pho Street Cafe</h3>
      <a href="#menu">Menu</a>
      <a href="#location">Location</a>
      <a href="#contact">Contact</a>
    </div>
    <div class="column">
      <span class="brand-logo">
        <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={30} />
      </span>
      <div class="contact-info">
        <p class="contact-info-icon">
          <Icon name="call" />
          <span>(972) 429-7212</span>
        </p>
        <p class="contact-info-icon">
          <Icon name="location_on" />
          <span>3483 FM 544 #110, Wylie, TX 75098</span>
        </p>
        <a href="mailto:info@phostreetcafe.com" class="contact-info-icon">
          <Icon name="mail" />
          <span>info@phostreetcafe.com</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  [astro-icon] {
    width: 20px;
    height: 20px;
  }
  .brand-logo {
    display: flex;
    justify-content: end;
  }
  .container {
    background-color: var(--base-dark);
    color: var(--base-light);
    display: flex;
    justify-content: space-between;
    align-items: start;
    padding: 1rem;
  }
  .contact-info {
    margin: 20px 0;
  }
  .contact-info p,
  .contact-info a {
    padding: 4px 0;
  }
  .contact-info a {
    color: var(--base-dark);
  }
  .contact-info span {
    margin-left: 6px;
  }
  .contact-info-icon {
    align-items: center;
    justify-content: center;
    display: flex;
  }
</style>
