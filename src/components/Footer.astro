---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";

const year = new Date().getFullYear();
---

<footer id="footer">
  <div class="container">
    <div class="column">
      <h3>Pho Street Cafe</h3>
      <div class="footer-menu">
        <a href="#menu">Menu</a>
        <a href="#location">Location</a>
        <a href="#contact">Contact</a>
      </div>
    </div>
    <div class="column">
      <span class="brand-logo">
        <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={30} />
      </span>
      <div class="contact-info">
        <a href="tel:+19724297212" class="contact-info-icon">
          <Icon name="call" />
          <span>(972) 429-7212</span>
        </a>
        <p class="contact-info-icon">
          <Icon name="location_on" />
          <span>3483 FM 544 #110, Wylie, TX 75098</span>
        </p>
        <a href="mailto:info@phostreetcafe.com" class="contact-info-icon">
          <Icon name="mail" />
          <span>info@phostreetcafe.com</span>
        </a>
      </div>
    </div>
  </div>
  <div class="copy-right">
    <p>&copy; {year} Pho Street Cafe. All Rights Reserved.</p>
  </div>
</footer>

<style>
  [astro-icon] {
    width: 20px;
    height: 20px;
    fill: var(--base-light);
  }
  .brand-logo {
    display: flex;
    justify-content: end;
  }
  .container {
    background-color: var(--base-dark);
    color: var(--base-light);
    display: flex;
    justify-content: space-between;
    align-items: start;
    padding: 1rem;
  }
  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: end;
    margin: 20px 0;
  }
  .contact-info p,
  .contact-info a {
    padding: 4px 0;
  }
  .contact-info a {
    color: var(--base-light);
    text-decoration: none;
  }
  .contact-info span {
    margin-left: 6px;
  }
  .contact-info-icon {
    align-items: center;
    justify-content: center;
    display: flex;
  }
  .footer-menu {
    display: flex;
    flex-direction: column;
  }
  .footer-menu a {
    text-decoration: none;
    color: var(--base-light);
  }
  .footer-menu a:hover {
    color: lightgray;
  }
  .copy-right {
    background-color: var(--base-dark);
    color: var(--base-light);
    font-size: 12px;
    text-align: center;
    padding: 20px;
  }
</style>
