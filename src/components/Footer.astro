---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";

const year = new Date().getFullYear();
---

<footer id="footer">
  <div class="container">
    <div class="footer-brand">
      <h3>Pho Street Cafe</h3>
      <span class="footer-brand-logo">
        <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={30} />
      </span>
    </div>
    <div class="row">
      <div class="column">
        <div class="footer-menu">
          <a href="#menu">Menu</a>
          <a href="#location">Location</a>
          <a href="#contact">Contact</a>
        </div>
      </div>
      <div class="column">
        <div class="contact-info">
          <a href="tel:+19724297212" class="contact-info-icon">
            <Icon name="call" />
            <span>(972) 429-7212</span>
          </a>
          <p class="contact-info-icon">
            <Icon name="location_on" />
            <span>3483 FM 544 #110, Wylie, TX 75098</span>
          </p>
          <a href="mailto:info@phostreetcafe.com" class="contact-info-icon">
            <Icon name="mail" />
            <span>info@phostreetcafe.com</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="copy-right">
    <p>&copy; {year} Pho Street Cafe. All Rights Reserved.</p>
  </div>
</footer>

<style>
  [astro-icon] {
    width: 20px;
    height: 20px;
    fill: var(--base-light);
  }
  .footer-brand {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }
  .container {
    background-color: var(--base-dark);
    color: var(--base-light);
    padding: 1rem;
  }
  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: start;
    margin: 10px 0;
  }
  .contact-info p,
  .contact-info a {
    padding: 4px 0;
  }
  .contact-info a {
    color: var(--base-light);
    text-decoration: none;
  }
  .contact-info span {
    margin-left: 6px;
  }
  .contact-info-icon {
    align-items: center;
    justify-content: center;
    display: flex;
  }
  .footer-menu {
    display: flex;
    flex-direction: column;
  }
  .footer-menu a {
    text-decoration: none;
    color: var(--base-light);
  }
  .footer-menu a:hover {
    color: lightgray;
  }
  .copy-right {
    background-color: var(--base-dark);
    color: var(--base-light);
    font-size: 12px;
    text-align: center;
    padding: 20px;
  }
  @media only screen and (min-width: 768px) {
    .row {
      display: flex;
      justify-content: space-between;
      align-items: start;
    }
    .contact-info {
      align-items: end;
      margin: 0;
    }
  }
</style>
