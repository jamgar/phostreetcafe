---
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";
---

<div id="sidenav" class="side-navigation">
  <button id="closebtn">&#9776;</button>
  <a href="#menu">Menu</a>
  <a href="#contact">Contact</a>
  <a href="#location">Location</a>
  <a href="#order">Order Online</a>
</div>
<div class="mobile-menu">
  <div class="brand">
    <span class="brand-logo">
      <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={30} />
    </span>
    <p>PHO STREET CAFE</p>
  </div>
  <button id="openbtn">&#9776;</button>
</div>

<script>
  document.querySelector("#openbtn").addEventListener("click", () => {
    document.getElementById("sidenav").style.width = "300px";
  });
  document.querySelector("#sidenav").addEventListener("click", () => {
    document.getElementById("sidenav").style.width = "0";
  });
</script>

<style>
  .mobile-menu {
    display: flex;
    align-items: flex-end;
    height: 50px;
    padding-left: 25px;
  }
  .mobile-menu p {
    font-size: 20px;
  }
  .side-navigation {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 10;
    top: 0;
    right: 0;
    background-color: var(--base-dark);
    overflow-x: hidden;
    transition: 0.3s;
    padding-top: 100px;
  }
  .side-navigation a {
    padding: 20px 10px;
    text-decoration: none;
    color: white;
    display: block;
    transition: 0.3s;
    text-align: right;
    text-transform: uppercase;
  }
  .side-navigation a:hover {
    color: var(--base-light);
  }
  #openbtn,
  #closebtn {
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: var(--base-light);
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 24px;
    padding-top: 12px;
  }
  #closebtn {
    margin-left: 50px;
  }
  .brand {
    color: var(--base-light);
    display: flex;
    align-items: center;
    font-weight: 600;
  }
  .brand-logo {
    margin-right: 4px;
  }
  .icon {
    height: 14px;
    display: inline-block;
  }

  @media only screen and (min-width: 768px) {
    .mobile-menu {
      display: none;
    }
  }
</style>
