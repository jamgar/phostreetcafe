---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";
---

<div id="navbar-desktop" class="desktop-menu">
  <div class="brand">
    <a href="#hero" class="brand-logo">
      <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={50} />
    </a>
    <p>PHO STREET CAFE</p>
  </div>
  <nav>
    <a href="#menu">Menu</a>
    <a href="#contact">Contact</a>
    <a href="#location">Location</a>
  </nav>
  <div id="ordernow">
    <span class="ordernow-label">Order Now:</span>
    <div class="nav-btn-group">
      <a href="#" class="btn-light nav-btn-call">
        <Icon class="icon" name="call" />
        <span>(972) 429-7212</span>
      </a>
      <button class="btn-dark order-modal-btn">Order Online</button>
    </div>
  </div>
</div>

<style>
  .desktop-menu {
    display: none;
  }
  .brand {
    color: var(--base-light);
    display: flex;
    align-items: center;
    font-weight: 600;
  }
  .brand-logo {
    margin-right: 4px;
  }
  nav {
    padding: 6px 0;
  }
  nav a,
  #ordernow a {
    text-decoration: none;
  }
  nav a {
    color: var(--base-dark);
    padding: 0 20px;
  }
  .ordernow-label {
    font-size: 12px;
    font-weight: 600;
    margin: 0 5px;
  }
  .nav-btn-group {
    display: flex;
  }
  .nav-btn-group a,
  .nav-btn-group button {
    padding: 4px 14px;
    margin: 0 5px;
    border-radius: 4px;
    text-align: center;
  }
  .nav-btn-group button {
    font-size: 12px;
  }
  .nav-btn-call {
    align-items: center;
    justify-content: center;
    display: flex;
    font-size: 12px;
  }
  .icon {
    height: 14px;
    display: inline-block;
  }
  .sticky {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 100;
  }

  @media only screen and (min-width: 768px) {
    .desktop-menu {
      background-color: var(--base-light);
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-left: 25px;
      padding-bottom: 8px;
    }
    .desktop-menu nav a:hover {
      color: #3a3a3a;
    }
    .brand {
      color: var(--base-dark);
      font-size: 14px;
    }
  }
  @media only screen and (min-width: 1024px) {
    .brand {
      font-size: 20px;
    }
  }
</style>

<script>
  import "../scripts/scroll";
</script>
