---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import BrandLogo from "../assets/images/psc-logo.png";
---

<div id="sidenav" class="side-navigation">
  <button id="closebtn">&#9776;</button>
  <a href="#menu">Menu</a>
  <a href="#contact">Contact</a>
  <a href="#location">Location</a>
  <a href="#order">Order Online</a>
</div>
<div class="mobile-menu">
  <div class="brand">
    <span class="brand-logo">
      <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={30} />
    </span>
    <p>PHO STREET CAFE</p>
  </div>
  <button id="openbtn">&#9776;</button>
</div>

<div class="desktop-menu">
  <div class="brand">
    <span class="brand-logo">
      <Image src={BrandLogo} alt="Pho Street Cafe Logo" width={50} />
    </span>
    <p>PHO STREET CAFE</p>
  </div>
  <nav>
    <a href="#menu">Menu</a>
    <a href="#contact">Contact</a>
    <a href="#location">Location</a>
  </nav>
  <div id="ordernow">
    <span>Order Now:</span>
    <div class="nav-btn-group">
      <a href="#" class="btn-light nav-btn-call">
        <Icon class="icon" name="call" />
        <span>(972) 429-7212</span>
      </a>
      <a href="#" class="btn-dark">UberEats</a>
      <a href="#" class="btn-dark">LAVU</a>
    </div>
  </div>
</div>

<script>
  document.querySelector("#openbtn").addEventListener("click", () => {
    document.getElementById("sidenav").style.width = "300px";
  });
  document.querySelector("#sidenav").addEventListener("click", () => {
    document.getElementById("sidenav").style.width = "0";
  });
</script>

<style>
  .mobile-menu {
    display: flex;
    align-items: flex-end;
    height: 50px;
    padding-left: 25px;
  }
  .mobile-menu p {
    font-size: 20px;
  }
  .desktop-menu {
    display: none;
  }
  .side-navigation {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 10;
    top: 0;
    right: 0;
    background-color: var(--base-dark);
    overflow-x: hidden;
    transition: 0.3s;
    padding-top: 100px;
  }
  .side-navigation a {
    padding: 20px 10px;
    text-decoration: none;
    color: white;
    display: block;
    transition: 0.3s;
    text-align: right;
    text-transform: uppercase;
  }
  .side-navigation a:hover {
    color: var(--base-light);
  }
  #openbtn,
  #closebtn {
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: var(--base-light);
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 24px;
    padding-top: 12px;
  }
  #closebtn {
    margin-left: 50px;
  }
  .brand {
    color: var(--base-light);
    display: flex;
    font-weight: 600;
  }
  .brand-logo {
    margin-right: 4px;
  }
  nav a,
  #ordernow a {
    text-decoration: none;
  }
  nav a {
    color: var(--base-dark);
    padding: 0 20px;
  }
  #ordernow span {
    font-size: 12px;
    font-weight: 600;
    margin: 0 5px;
  }
  .nav-btn-group {
    display: flex;
  }
  .nav-btn-group a {
    padding: 2px 8px;
    margin: 0 5px;
    border-radius: 4px;
    text-align: center;
  }
  .icon {
    height: 14px;
    display: inline-block;
  }
  .nav-btn-call {
    align-items: center;
    justify-content: center;
    display: flex;
    font-size: 12px;
  }

  @media only screen and (min-width: 768px) {
    .mobile-menu {
      display: none;
    }
    .desktop-menu {
      background-color: var(--base-light);
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-left: 25px;
      padding-bottom: 8px;
    }
    .desktop-menu nav a:hover {
      color: #3a3a3a;
    }
    .brand {
      color: var(--base-dark);
    }
  }
</style>
